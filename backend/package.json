{
  "name": "fiscalai-backend",
  "version": "1.0.0",
  "description": "Node.js backend for FiscalAI - Brazilian tax invoice management",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:setup": "node prisma/setup-db.js",
    "db:reset": "prisma db push --force-reset --accept-data-loss && prisma generate",
    "db:reset:seed": "prisma db push --force-reset --accept-data-loss && prisma generate && node prisma/seed.js",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.15.0",
    "stripe": "^20.3.0",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.1.9",
    "prisma": "^6.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
