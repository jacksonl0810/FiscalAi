# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/fiscalai?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT Secrets (generate strong random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Nuvem Fiscal API (Brazilian tax invoice service)
NUVEM_FISCAL_CLIENT_ID=your-client-id
NUVEM_FISCAL_CLIENT_SECRET=your-client-secret
NUVEM_FISCAL_USE_SANDBOX=true

# OpenAI (for AI assistant features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
